<script>
function toggleSub(el) {
    const parentLi = el.closest('li.has-children');
    parentLi.classList.toggle('expanded');
    parentLi.classList.toggle('collapsed');
    
    const icon = el.querySelector('.toggle-icon');
    if (parentLi.classList.contains('expanded')) {
        icon.innerHTML = '<img src="/media/wysiwyg/minusLineDark.png" alt="expand"/>';
    } else {
        icon.innerHTML = '<img src="/media/wysiwyg/plusLine.png" alt="expand"/>';
    }
}
</script>
